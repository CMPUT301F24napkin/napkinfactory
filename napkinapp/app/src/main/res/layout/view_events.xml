<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Main Content Section with Weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Header Section with Icon, Title, and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon -->
            <ImageView
                android:id="@+id/organizer_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#C4C4C4"
                android:src="@drawable/blank_profile" />

            <!-- Header Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/organizer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Host Name"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Host Phone Number"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Menu Icon -->
            <Button
                android:id="@+id/more_options"
                android:layout_width="39dp"
                android:layout_height="43dp"
                android:background="#00000000"
                android:drawableTop="@drawable/more_vert" />

        </LinearLayout>

        <!-- Image Section -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:background="#D3D3D3"
            android:contentDescription="Event Image" />

        <!-- Event Name and Date -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Name"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Date"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/event_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="The description for this event is empty"
            android:textColor="@color/text_primary" />

        <!-- QR Code Display Section -->
        <ImageView
            android:id="@+id/event_qr_code"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:contentDescription="Event QR Code" />
    </LinearLayout>

    <!-- Button Section at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toggle_waitlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="@string/add_to_waitlist"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/event_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/text_primary"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp" />
    </LinearLayout>

</LinearLayout>
