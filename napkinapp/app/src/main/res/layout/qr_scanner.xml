<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- BarcodeView for QR scanning with camera preview -->
    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/barcode_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Transparent overlay with a border for the QR scanning area -->
    <View
        android:id="@+id/qr_overlay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/qr_border" />

    <!-- Text display for scan instructions -->
    <TextView
        android:id="@+id/scan_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="24dp"
        android:text="Align QR code within the frame"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</FrameLayout>
