<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera preview for QR scanning -->
    <SurfaceView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Transparent overlay with a border for the QR scanning area -->
    <View
        android:id="@+id/qr_overlay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/qr_border" />

    <!-- Text display for scan instructions -->
    <TextView
        android:id="@+id/scan_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="24dp"
        android:text="Align QR code within the frame"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- TextView for QR code result display -->
    <TextView
        android:id="@+id/qr_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="24dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</FrameLayout>
